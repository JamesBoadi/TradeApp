{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch remote chaincode debugger",
            "program": "${workspaceFolder}/built/index.js",
            "cwd": "${workspaceFolder}",
            "env": {
                "CORE_CHAINCODE_ID_NAME" : "mycc:v1"
            },
            "args": [
                "--peer.address", "localhost:7051"
            ],
            "outFiles": [
                "${workspaceFolder}/built/*"
            ],
            "sourceMaps": true
        }
    ]
}
